<!DOCTYPE html>
<html>
  <head>
    <title>Stone</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%# <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"></script> %>

    <%= csrf_meta_tags %>
  </head>
    <body>

    <div class="wrapper">
    
      <div class="navbar navbar-default navbar-static-top">

        <div class="container">
          <%= link_to "ЛОГО", root_path, class: 'btn navbar-btn btn-warning btn-xs' %>
          <% if user_signed_in? %>
              <%= button_to "Новая игра", new_game_path, method: :post, class: 'btn navbar-btn btn-success btn-xs' %>
              <%= link_to "Выйти", destroy_user_session_path, method: :delete, class: 'btn btn-info btn-xs navbar-btn' %>
            </div>
          <% else %>
            <div>
              <%= link_to "Войти", new_user_session_path, class: 'btn btn-primary' %>
              <%= link_to "Регистрация", new_user_registration_path, class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>

      </div>

      <div class="container">
        <%= yield %>
      </div>

      <div class="footer">
        <p><%= link_to "@juwpo", "#" %> 2022</p>
      </div>

    </div>

  </body>

    <div class="container">
      <%= debug(params) if Rails.env.development? %>
    </div>

  </body>
</html>
